{
  "name": "kled-desktop",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "rsbuild build",
    "dev": "rsbuild dev",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "package": "electron-builder build --publish never",
    "package:win": "electron-builder build --win --publish never",
    "package:mac": "electron-builder build --mac --publish never",
    "package:linux": "electron-builder build --linux --publish never"
  },
  "build": {
    "appId": "io.kled.desktop",
    "productName": "Kled Desktop",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@rsbuild/core": "^0.4.5",
    "@rsbuild/plugin-react": "^0.4.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@tauri-apps/api": "^1.5.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.2.1",
    "framer-motion": "^11.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
